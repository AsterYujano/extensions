{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "image-converter",
  "title": "Image Converter",
  "description": "Convert images to different formats. PNG images to JPG, or JPG images to PNG.",
  "categories": [
    "Media",
    "Design Tools"
  ],
  "icon": "icon.png",
  "author": "Francois",
  "license": "MIT",
  "commands": [{
      "name": "convertToPng",
      "title": "Convert Image to PNG",
      "description": "jpg -› png",
      "mode": "no-view"
    },
    {
      "name": "convertToJpg",
      "title": "Convert Image to JPG",
      "description": "png -› jpg",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.30.1",
    "jimp": "^0.16.1",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}